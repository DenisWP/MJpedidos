<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/tela_cadastro"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.deniswilson.mjpedidos.TelaCadastro"
    android:orientation="vertical"
    android:background="#F0FFF0">


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="Nome"
        android:ems="10"
        android:id="@+id/edtNome" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="Telefone"
        android:ems="10"
        android:id="@+id/edtTel" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="Longradouro"
        android:ems="10"
        android:id="@+id/edtLongradouro" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="Numero"
        android:ems="10"
        android:id="@+id/edtNumero" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="Bairro"
        android:ems="10"
        android:id="@+id/edtBairro" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="Cidade"
        android:ems="10"
        android:id="@+id/edtCidade" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="CEP"
        android:ems="10"
        android:id="@+id/edtCep" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="Email"
        android:ems="10"
        android:id="@+id/edtEmail" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">

        <Button
            android:text="SALVAR"
            android:layout_height="match_parent"
            android:id="@+id/btnSalvar"
            android:background="#66CDAA"
            android:layout_width="180dp" />

        <Button
            android:text="CANCELAR"
            android:layout_height="match_parent"
            android:id="@+id/btnCancelar"
            android:background="#66CDAA"
            android:layout_width="180dp" />

    </LinearLayout>

</LinearLayout>
